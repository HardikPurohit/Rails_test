<div class="panel panel-default">
   <div class="panel-heading">All Booking</div>
   <div class="panel-body">
     <table border="2" class="table table-hover table-striped">
      <tr>
        <th>Date</th>
        <th>Customer name</th>
        <th>Customer phone_number</th>
        <th>Cleaner name</th>
        <th>City</th>
      </tr>
    <%@bookings.each do |booking|%>
      <tr>
        <td>
          <%=booking.datetime%>
        </td>
        <td>
          <%=booking.customer.first_name + " " + booking.customer.last_name%>
        </td>
        <td>
          <%=booking.customer.phone_number%>
        </td>
        <td>
          <%=booking.cleaner.first_name + " " + booking.customer.last_name %>
        </td>
        <td>
          <%=booking.city.city_name%><br />
        </td>
      </tr>
    <%end%>
    </table>
  </div>
</div>
