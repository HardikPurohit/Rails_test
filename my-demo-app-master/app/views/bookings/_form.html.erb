<%= form_for(@booking) do |f| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @booking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :datetime %>
  </div>
  <div class="field">
    <%= f.label :select_city%><br />
    <%= collection_select "city", "booking", @cities, :id, :city_name,
        {selected: 0, include_blank: '--Cities--'}%>
  </div>
  <div id="cleaners">
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
