<%=link_to "Home" ,admins_path%>
<%= link_to "Log out", destroy_admin_session_path, method: :delete%>
<div class="panel panel-default">
   <div class="panel-heading">All Cleaners</div>
   <div class="panel-body">
     <table border="2" class="table table-hover table-striped">
       <thead>
         <tr>
           <th>Name</th>
           <th>Email</th>
           <th>Quality score</th>
           <th>Cities</th>
           <th colspan="3">Action</th>
         </tr>
       </thead>
       <tbody>
        <% @cleaners.each do |cleaner| %>
          <tr>
            <td><%= cleaner.first_name + " " + cleaner.last_name %></td>
            <td><%= cleaner.email%></td>
            <td><%= cleaner.quality_score %></td>
            <td><%= cleaner.cities.pluck(:city_name).join(", ")%></td>
            <td><%= link_to 'Show', cleaner %></td>
                <td><%= link_to 'Edit', edit_cleaner_path(cleaner) %></td>
            <td><%= link_to 'Destroy', cleaner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to 'New Cleaner', new_cleaner_path %>
