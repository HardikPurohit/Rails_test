<%=link_to "Home", admins_path%>

<h2>Details of <%=@city.city_name%></h2>
<div class="panel panel-default">
   <div class="panel-heading">Bookings in <%=@city.city_name%></div>
    <div class="panel-body">
      <table border="2"  class="table table-hover table-striped">
      <tr>
        <th>Date</th>
        <th>Customer</th>
        <th>Cleaner</th>
      </tr>
      <%@city.bookings.each do |booking|%>
        <tr>
          <td>
            <%=booking.date%>
          </td>
          <td>
            <%=booking.customer.first_name + " " + booking.customer.last_name%>
          </td>
          <td>
            <%=booking.cleaner.first_name + " " + booking.cleaner.last_name%>
          </td>
        </tr>
      <%end%>
    </table>
  </div>
</div>
  <div class="panel panel-default">
    <div class="panel-heading">Bookings in Cleaners working in <%=@city.city_name%></div>
      <div class="panel-body">
        <table border="2"  class="table table-hover table-striped">
          <tr>
            <th>Cleaner</th>
            <th>Email</th>
            <th>Quality Score</th>
          </tr>
          <%@city.cleaners.each do |cleaner|%>
            <tr>
              <td>
                <%=cleaner.first_name + " " + cleaner.last_name%>
              </td>
              <td>
                <%=cleaner.email%>
              </td>
              <td>
                <%=cleaner.quality_score%>
              </td>
            </tr>
          <%end%>
        </table>
      </div>
    </div>
<%=link_to "Back", cities_path%>
