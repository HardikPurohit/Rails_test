<%= link_to 'New City', new_city_path, class: "btn btn-success new" %>
<div class="panel panel-default">
  <div class="panel-heading">All Cities</div>
  <div class="panel-body">
    <table border="2" class="table table-hover table-striped">
      <tr>
        <th>City name</th>
        <th>Edit</th>
        <th>Details</th>
        <th>Delete</th>
      </tr>
      <%@cities.each do |city| %>
        <tr>
          <td>
            <%=city.city_name%>
          </td>
          <td>
            <%=link_to "Edit", edit_city_path(city)%>
          </td>
          <td>
            <%=link_to "Show", city_path(city)%>
          </td>
          <td>
            <%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <%end %>
    </table>
  </div>
</div>
